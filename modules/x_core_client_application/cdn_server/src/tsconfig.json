{
  "compilerOptions": {
    "strict": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "dom"
    ],
    // todo: Nest 6.0 update and fix.
    "skipLibCheck": true,
    "baseUrl": ".",
    "outDir": "../target/dist:raw",
    "paths": {
      "@Application/*": [ "./main/application/*" ],
      "@Application": [ "./main/application/index" ],
      "@Lib/*": [ "./main/lib/*" ]
    }
  },
  "types": [
    "node"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}