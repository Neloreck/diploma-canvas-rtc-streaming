{
  "compilerOptions": {
    "outDir": "../ts-target/",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": "./",
    "paths": {
      "@App/*": [ "application/*" ],
      "@Store/*": [ "application/data/store/*" ],
      "@Lib/*": [ "lib/*" ]
    }
  },
  "types": [
    "node",
    "reflect-metadata"
  ],
  "exclude": [
    "node_modules"
  ]
}